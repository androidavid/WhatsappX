<resources>
    <!-- Base application theme. -->

    <style name="Theme.WhatsappX" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Primary brand color. -->

        <item name="android:colorBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/ColorAccent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Toolbar" parent="Theme.AppCompat.NoActionBar">

    </style>

    <style name="Theme.WhatsappX.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.WhatsappX.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.WhatsappX.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>